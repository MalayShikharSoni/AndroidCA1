<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#121222">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_margin="30dp"
            android:src="@drawable/snapchatlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LPU University"
            android:textSize="20dp"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STUDENT PROFILE"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_margin="30dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="30dp"
            android:src="@drawable/snapchatlogo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="RAJESH KUMAR"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="S13242"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Email: rajeshkumar@lpu.in"
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Phone: +91 9876543210"
            android:textSize="16dp"
            android:layout_marginBottom="15dp"
            />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:id="@+id/btn" />




    </LinearLayout>

</LinearLayout>



